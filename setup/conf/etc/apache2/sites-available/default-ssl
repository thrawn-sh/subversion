<VirtualHost *:443 *:8443>
	ServerAdmin root@shadowhunt.de

	DocumentRoot /var/www

	<Directory />
		Options FollowSymLinks
		AllowOverride None
		Order allow,deny
		allow from all
	</Directory>

	SSLEngine             On
	SSLCertificateFile    /etc/ssl/certs/ssl-cert-snakeoil.pem
	SSLCertificateKeyFile /etc/ssl/private/ssl-cert-snakeoil.key

	ProxyRequests Off

	<Location /1.0.0>
		ProxyPass        http://localhost:010000
		ProxyPassReverse http://localhost:010000
	</Location>
	<Location /1.1.0>
		ProxyPass        http://localhost:010100
		ProxyPassReverse http://localhost:010100
	</Location>
	<Location /1.2.0>
		ProxyPass        http://localhost:010200
		ProxyPassReverse http://localhost:010200
	</Location>
	<Location /1.3.0>
		ProxyPass        http://localhost:010300
		ProxyPassReverse http://localhost:010300
	</Location>
	<Location /1.4.0>
		ProxyPass        http://localhost:010400
		ProxyPassReverse http://localhost:010400
	</Location>
	<Location /1.5.0>
		ProxyPass        http://localhost:010500
		ProxyPassReverse http://localhost:010500
	</Location>
	<Location /1.6.0>
		ProxyPass        http://localhost:010600
